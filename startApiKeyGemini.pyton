# Simulando um array para as mesas
mesas = []

# Função para adicionar uma mesa
def adicionar_mesa():
    nome_cliente = input("Nome do cliente: ")
    numero_mesa = int(input("Número da mesa: "))
    qtd_pessoas = int(input("Quantidade de pessoas: "))
    mesa = {
        "clienteNome": nome_cliente,
        "mesaNumero": numero_mesa,
        "qtdPessoas": qtd_pessoas
    }
    mesas.append(mesa)
    print("Mesa adicionada com sucesso!")

# Função para exibir todas as mesas
def exibir_mesas():
    if not mesas:
        print("Nenhuma mesa cadastrada.")
    else:
        for i, mesa in enumerate(mesas):
            print(f"Mesa {i+1}:")
            print(f"   Nome: {mesa['clienteNome']}")
            print(f"   Número: {mesa['mesaNumero']}")
            print(f"   Pessoas: {mesa['qtdPessoas']}")

# Loop principal do programa
while True:
    print("\n--- Menu ---")
    print("1. Adicionar mesa")
    print("2. Exibir mesas")
    print("3. Sair")

    opcao = input("Escolha uma opção: ")

    if opcao == '1':
        adicionar_mesa()
    elif opcao == '2':
        exibir_mesas()
    elif opcao == '3':
        break
    else:
        print("Opção inválida.")